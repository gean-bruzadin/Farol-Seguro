@model Farol_Seguro.Models.Aluno
@* Entidade view: Cadastro de Aluno *@
@{
    ViewData["Title"] = "Cadastrar Aluno";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Farol Seguro</title>

    @* LINK DO BOOTSTRAP CSS *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    @* LINK DO BOXICONS para ícones *@
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />

    @* Usaremos o mesmo CSS do Login, pois a estrutura é a mesma *@
    <link rel="stylesheet" href="~/css/Cadastro.css" />
</head>
<body>
    <div class="container">
        @* LADO ESQUERDO: IMAGEM (Idêntico ao Login) *@
        <div class="image-side">
            <div class="image-content">
                <h1 class="safelink-title">Farol Seguro</h1>
                @* Use a imagem adequada para o Cadastro aqui, se for diferente de 'okok.svg' *@
                <img src="~/img/´pj.svg" alt="Imagem de Cadastro" class="decorative-image" />
            </div>
        </div>

        @* LADO DIREITO: FORMULÁRIO *@
        <div class="form-side">
            <h2 class="title">Cadastrar Aluno</h2>

            @* Exibição de mensagens de erro/sucesso (usado pelo Controller se retornar a View) *@
            @if (TempData["MensagemErro"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert" style="margin-bottom: 20px;">
                    @TempData["MensagemErro"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="Criar" method="post" class="login-form">

                @* Sumário de Validação do Modelo (Exibe erros gerais/campos não preenchidos) *@
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" style="text-align: left;"></div>

                @* Nome *@
                <div class="input-field">
                    <i class="bx bxs-user icon"></i> @* Ícone de usuário *@
                    <input asp-for="Nome_Aluno" placeholder="Nome Completo" class="form-control" required />
                </div>
                <span asp-validation-for="Nome_Aluno" class="text-danger d-block mb-2" style="text-align: left; margin-top: -10px;"></span>


                @* Email *@
                <div class="input-field">
                    <i class="bx bxs-envelope icon"></i> @* Ícone de envelope *@
                    <input asp-for="Email_Aluno" type="email" placeholder="E-mail" class="form-control" required />
                </div>
                <span asp-validation-for="Email_Aluno" class="text-danger d-block mb-2" style="text-align: left; margin-top: -10px;"></span>


                @* Senha *@
                <div class="input-field">
                    <i class="bx bxs-lock-alt icon"></i> @* Ícone de cadeado *@
                    <input asp-for="Senha_Aluno" type="password" placeholder="Senha" class="form-control" required />
                </div>
                <span asp-validation-for="Senha_Aluno" class="text-danger d-block mb-2" style="text-align: left; margin-top: -10px;"></span>


                @* Gênero (Mantido como Select, mas estilizado como InputField) *@
                <div class="input-field">
                    <i class="bx bxs-group icon"></i> @* Ícone de grupo/gênero *@
                    <select asp-for="Genero_Aluno" class="form-control">
                        <option value="" disabled selected>Gênero...</option> @* Placeholder no select *@
                        <option value="Masculino">Masculino</option>
                        <option value="Feminino">Feminino</option>
                        <option value="Outro">Outro</option>
                    </select>
                </div>
                <span asp-validation-for="Genero_Aluno" class="text-danger d-block mb-2" style="text-align: left; margin-top: -10px;"></span>


                @* Data de Nascimento *@
                <div class="input-field">
                    <i class="bx bxs-calendar icon"></i> @* Ícone de calendário *@
                    <input asp-for="DataNascimento_Aluno" type="date" class="form-control" placeholder="Data de Nascimento" required />
                </div>
                <span asp-validation-for="DataNascimento_Aluno" class="text-danger d-block mb-2" style="text-align: left; margin-top: -10px;"></span>


                @* BOTÃO SALVAR (com a classe btn-register do login) *@
                <button type="submit" class="btn btn-register" style="margin-top: 20px;">Cadastrar</button>
            </form>

            @* Link de Retorno para Login *@
            <p class="login-link">
                Já tem conta? <a asp-controller="Autenticacao" asp-action="Login">Fazer Login</a>
            </p>
        </div>
    </div>

    @* BOOTSTRAP JS *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    @* Scripts adicionais de validação *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>