@model IEnumerable<Farol_Seguro.Models.Aluno>

@{
    ViewData["Title"] = "Lista de Alunos";
}
<link href="~/css/header.css" rel="stylesheet" />
<link href="~/css/Index.css" rel="stylesheet" />



<div class="index-container">
    @* Bloco de Mensagens TempData (SUCESSO E ERRO) *@
    @{
        if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success alert-custom alert-dismissible fade show" role="alert">
                <strong><i class="fas fa-check-circle me-2"></i>Sucesso!</strong> @TempData["MensagemSucesso"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        else if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger alert-custom alert-dismissible fade show" role="alert">
                <strong><i class="fas fa-exclamation-circle me-2"></i>Erro!</strong> @TempData["MensagemErro"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    }

    <!-- Barra de Ações -->
    <div class="action-bar">
        <a asp-action="Criar" class="btn-new">
            <i class="fas fa-plus"></i>
            Novo Aluno
        </a>
    </div>

    <!-- Tabela -->
    <div class="table-container">
        <table class="custom-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Gênero</th>
                    <th>Data Nascimento</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var aluno in Model)
                {
                    <tr>
                        <td data-label="ID">@aluno.Id_Aluno</td>
                        <td data-label="Nome">@aluno.Nome_Aluno</td>
                        <td data-label="Email">@aluno.Email_Aluno</td>
                        <td data-label="Gênero">@aluno.Genero_Aluno</td>
                        <td data-label="Data Nascimento">@aluno.DataNascimento_Aluno.ToShortDateString()</td>
                        <td data-label="Ações">
                            <div class="action-buttons">
                                <a asp-action="Editar" asp-route-id="@aluno.Id_Aluno" class="btn-action btn-edit">
                                    <i class="fas fa-edit"></i>Editar
                                </a>
                                <a asp-action="Details" asp-route-id="@aluno.Id_Aluno" class="btn-action btn-details">
                                    <i class="fas fa-eye"></i>Detalhes
                                </a>
                                <button type="button" class="btn-action btn-delete"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal_@aluno.Id_Aluno">
                                    <i class="fas fa-trash"></i>Excluir
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="empty-state">
            <i class="fas fa-inbox"></i>
            <h3>Nenhum aluno cadastrado</h3>
            <p>Comece adicionando o primeiro aluno ao sistema.</p>
            <a asp-action="Criar" class="btn-new mt-3">
                <i class="fas fa-plus"></i>
                Adicionar Primeiro Aluno
            </a>
        </div>
    }
</div>

@* =======================================================
    MODAIS DE EXCLUSÃO (Para cada aluno)
======================================================== *@
@foreach (var aluno in Model)
{
    <div class="modal fade" id="deleteModal_@aluno.Id_Aluno" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Confirmar Exclusão</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div class="modal-body">
                    Tem certeza que deseja excluir o aluno <strong>@aluno.Nome_Aluno</strong> (ID: @aluno.Id_Aluno)?
                    <p class="text-danger small mt-2">Esta ação é irreversível.</p>
                </div>
                <div class="modal-footer">
                    <form asp-action="Deletar" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@aluno.Id_Aluno" />
                        <button type="submit" class="btn btn-danger">Sim, excluir</button>
                    </form>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
}

<script src="~/js/menu_dropdown.js"></script>
<script src="~/js/open-modal.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>