@* entidade view: Login *@
@{
    ViewData["Title"] = "Login";
    Layout = null; // Layout nulo, como solicitado
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Farol Seguro</title>

    @* 1. LINK DO BOOTSTRAP CSS *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
    @* O seu CSS deve ser carregado DEPOIS do Bootstrap para maior precedência *@
    <link rel="stylesheet" href="~/css/Login.css" />
</head>
<body>
    <div class="container">
        <div class="image-side">
            <div class="image-content">
                <h1 class="safelink-title">Farol Seguro</h1> @* "Safelink" trocado *@
                <img src="~/img/okok.svg" alt="Imagem de Acesso" class="decorative-image" />
            </div>
        </div>

        <div class="form-side">
            <h2 class="title">Acesso ao Sistema</h2>

            @* 2. BLOCO DE TEMPDATA (posicionado corretamente) *@
            @if (TempData["MensagemSucesso"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert" style="margin-bottom: 20px;">
                    @TempData["MensagemSucesso"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["MensagemErro"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert" style="margin-bottom: 20px;">
                    @TempData["MensagemErro"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @* FIM DO BLOCO DE TEMPDATA *@

            @if (ViewBag.Mensagem != null)
            {
                <div class="alert alert-danger" role="alert" style="color: #8B0000; background-color: #fdd; border: 1px solid #8B0000; padding: 10px; border-radius: 8px; margin-bottom: 20px; text-align: center;">
                    @ViewBag.Mensagem
                </div>
            }

            <form asp-controller="Autenticacao" asp-action="Login" method="post" class="login-form">

                <div class="input-field">
                    <i class="bx bxs-envelope icon"></i>
                    @* Adicionado a classe 'form-control' para compatibilidade com o CSS ajustado *@
                    <input type="email" placeholder="E-mail" class="form-control" id="email" name="email" required>
                </div>

                <div class="input-field">
                    <i class="bx bxs-lock-alt icon"></i>
                    @* Adicionado a classe 'form-control' para compatibilidade com o CSS ajustado *@
                    <input type="password" placeholder="Senha" class="form-control" id="senha" name="senha" required>
                </div>

                <button type="submit" class="btn btn-register">Entrar</button>
            </form>

            <p class="login-link" style="margin-top: 5px;">
                Não tem conta? <a asp-controller="aluno" asp-action="Criar">Cadastre-se</a>
            </p>
        </div>
    </div>

    @* 3. ADICIONE O BOOTSTRAP JS AQUI *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>