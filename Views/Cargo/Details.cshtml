@model Farol_Seguro.Models.Cargo

@{
    ViewData["Title"] = "Detalhes do Cargo";
}

<link href="~/css/header.css" rel="stylesheet" />
<link href="~/css/Details.css" rel="stylesheet" />

<div class="details-container">
    <!-- Card de Detalhes -->
    <div class="details-card">
        <div class="details-card-header">
            <h2 class="details-card-title">
                <i class="fas fa-briefcase"></i>
                Detalhes do Cargo
            </h2>
        </div>
        <div class="details-card-body">
            <ul class="details-list">
                <li class="detail-item">
                    <div class="detail-icon">
                        <i class="fas fa-hashtag"></i>
                    </div>
                    <div class="detail-content">
                        <div class="detail-label">ID</div>
                        <div class="detail-value">@Model.Id_Cargo</div>
                    </div>
                </li>
                <li class="detail-item">
                    <div class="detail-icon">
                        <i class="fas fa-id-card-alt"></i>
                    </div>
                    <div class="detail-content">
                        <div class="detail-label">Nome do Cargo</div>
                        <div class="detail-value">@Model.Nome_Cargo</div>
                    </div>
                </li>
                <li class="detail-item">
                    <div class="detail-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="detail-content">
                        <div class="detail-label">Quantidade de Funcionários</div>
                        <div class="detail-value">@Model.Funcionarios?.Count() ?? 0</div>
                    </div>
                </li>
            </ul>

            <!-- Botões de Ação -->
            <div class="details-actions">
                <a asp-action="Editar" asp-route-id="@Model.Id_Cargo" class="btn-details btn-edit">
                    <i class="fas fa-edit"></i>
                    Editar Cargo
                </a>
                <a asp-action="Index" class="btn-details btn-back">
                    <i class="fas fa-arrow-left"></i>
                    Voltar para Lista
                </a>
            </div>
        </div>
    </div>
</div>

<script src="~/js/menu_dropdown.js"></script>
<script src="~/js/open-modal.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>