@model Farol_Seguro.Models.Cidade

@{
    ViewData["Title"] = "Detalhes da Cidade";
}

<link href="~/css/header.css" rel="stylesheet" />
<link href="~/css/Details.css" rel="stylesheet" />

<div class="details-container">
    <!-- Card de Detalhes -->
    <div class="details-card">
        <div class="details-card-header">
            <h2 class="details-card-title">
                <i class="fas fa-city"></i>
                Detalhes da Cidade
            </h2>
        </div>
        <div class="details-card-body">
            <ul class="details-list">
                <li class="detail-item">
                    <div class="detail-icon">
                        <i class="fas fa-hashtag"></i>
                    </div>
                    <div class="detail-content">
                        <div class="detail-label">ID</div>
                        <div class="detail-value">@Model.Id_Cidade</div>
                    </div>
                </li>
                <li class="detail-item">
                    <div class="detail-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div class="detail-content">
                        <div class="detail-label">Nome da Cidade</div>
                        <div class="detail-value">@Model.Nome_Cidade</div>
                    </div>
                </li>
                <li class="detail-item">
                    <div class="detail-icon">
                        <i class="fas fa-flag"></i>
                    </div>
                    <div class="detail-content">
                        <div class="detail-label">Estado</div>
                        <div class="detail-value">@Model.Estado?.Nome_Estado</div>
                    </div>
                </li>
                <li class="detail-item">
                    <div class="detail-icon">
                        <i class="fas fa-school"></i>
                    </div>
                    <div class="detail-content">
                        <div class="detail-label">Quantidade de Escolas</div>
                        <div class="detail-value">@Model.Escolas?.Count() ?? 0</div>
                    </div>
                </li>
            </ul>

            <!-- Botões de Ação -->
            <div class="details-actions">
                <a asp-action="Editar" asp-route-id="@Model.Id_Cidade" class="btn-details btn-edit">
                    <i class="fas fa-edit"></i>
                    Editar Cidade
                </a>
                <a asp-action="Index" class="btn-details btn-back">
                    <i class="fas fa-arrow-left"></i>
                    Voltar para Lista
                </a>
            </div>
        </div>
    </div>
</div>

<script src="~/js/menu_dropdown.js"></script>
<script src="~/js/open-modal.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>