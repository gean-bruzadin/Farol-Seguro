@model IEnumerable<Farol_Seguro.Models.Cidade>

@{
    ViewData["Title"] = "Lista de Cidades";
}
<link href="~/css/header.css" rel="stylesheet" />
<link href="~/css/Index.css" rel="stylesheet" />

<div class="index-container">
    @* Bloco de Mensagens TempData *@
    @{
        if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success alert-custom alert-dismissible fade show" role="alert">
                <strong><i class="fas fa-check-circle me-2"></i>Sucesso!</strong> @TempData["MensagemSucesso"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        else if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger alert-custom alert-dismissible fade show" role="alert">
                <strong><i class="fas fa-exclamation-circle me-2"></i>Erro!</strong> @TempData["MensagemErro"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    }

    <!-- Barra de Ações -->
    <div class="action-bar">
        <a asp-action="Criar" class="btn-new">
            <i class="fas fa-plus"></i>
            Nova Cidade
        </a>
    </div>

    <!-- Tabela -->
    <div class="table-container">
        <table class="custom-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome da Cidade</th>
                    <th>Estado</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cidade in Model)
                {
                    <tr>
                        <td data-label="ID">@cidade.Id_Cidade</td>
                        <td data-label="Nome da Cidade">@cidade.Nome_Cidade</td>
                        <td data-label="Estado">@cidade.Estado?.Nome_Estado</td>
                        <td data-label="Ações">
                            <div class="action-buttons">
                                <a asp-action="Editar" asp-route-id="@cidade.Id_Cidade" class="btn-action btn-edit">
                                    <i class="fas fa-edit"></i>Editar
                                </a>
                                <a asp-action="Details" asp-route-id="@cidade.Id_Cidade" class="btn-action btn-details">
                                    <i class="fas fa-eye"></i>Detalhes
                                </a>
                                <button type="button" class="btn-action btn-delete"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal@(cidade.Id_Cidade)">
                                    <i class="fas fa-trash"></i>Excluir
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="empty-state">
            <i class="fas fa-city"></i>
            <h3>Nenhuma cidade cadastrada</h3>
            <p>Comece adicionando a primeira cidade ao sistema.</p>
            <a asp-action="Criar" class="btn-new mt-3">
                <i class="fas fa-plus"></i>
                Adicionar Primeira Cidade
            </a>
        </div>
    }
</div>

@* =======================================================
    MODAIS DE EXCLUSÃO (Para cada cidade)
======================================================== *@
@foreach (var cidade in Model)
{
    <div class="modal fade" id="deleteModal@(cidade.Id_Cidade)" tabindex="-1" aria-labelledby="deleteModalLabel@(cidade.Id_Cidade)" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteModalLabel@(cidade.Id_Cidade)">Confirmar Exclusão</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Tem certeza que deseja excluir a cidade <strong>@cidade.Nome_Cidade</strong> (Estado: @cidade.Estado?.Nome_Estado)?
                    <p class="text-danger small mt-2">Esta ação é irreversível.</p>
                </div>
                <div class="modal-footer">
                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" name="id" value="@cidade.Id_Cidade" />
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Sim, Excluir</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

<script src="~/js/menu_dropdown.js"></script>
<script src="~/js/open-modal.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>