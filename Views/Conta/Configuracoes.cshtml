@* Arquivo: Views/Conta/Configuracoes.cshtml *@

@{
    ViewData["Title"] = "Configurações - Farol Seguro";

    // Acessando ViewData de forma segura
    string NomeUsuario = ViewData["NomeUsuario"] as string ?? "Usuário Não Identificado";
    string EmailUsuario = ViewData["EmailUsuario"] as string ?? "email.indisponivel@farol.com";
    string RoleUsuario = ViewData["RoleUsuario"] as string ?? "Visitante";
}

<link href="~/css/header.css" rel="stylesheet" />
<link href="~/css/Config.css" rel="stylesheet" />


<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <link rel="stylesheet" href="~/style/tela-config.css">
    <link rel="stylesheet" href="~/style/modal_user.css">
</head>

<body>
    @*
        NOTA: O conteúdo da navegação (HEADER) deve estar no seu arquivo de Layout (_Layout.cshtml)
        ou ser injetado via Partial View aqui.
    *@

    <div class="container">
        <h1 class="page-title">
            <i class="fas fa-cog"></i> Configurações
        </h1>

        <div class="settings-container">
            <div class="settings-layout">

                <div class="settings-sidebar">
                    <ul class="settings-menu">
                        <li class="settings-menu-item active">
                            <a href="#seguranca" class="settings-menu-link" data-section="seguranca">
                                <i class="fas fa-lock"></i> Segurança
                            </a>
                        </li>
                        <li class="settings-menu-item">
                            <a href="#ajuda" class="settings-menu-link" data-section="ajuda">
                                <i class="fas fa-question-circle"></i> Ajuda
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="settings-content">

                    @* Exibição de Mensagens (Sucesso/Erro) *@
                    @if (TempData["MensagemSucesso"] != null)
                    {
                        <div class="alert alert-success">@TempData["MensagemSucesso"]</div>
                    }
                    @if (TempData["MensagemErro"] != null)
                    {
                        <div class="alert alert-danger">@TempData["MensagemErro"]</div>
                    }

                    <div id="seguranca" class="settings-section">
                        <h2 class="section-title">
                            <i class="fas fa-lock"></i> Segurança da Conta (@RoleUsuario)
                        </h2>

                        <div class="settings-card">
                            <h3 class="card-title">
                                <i class="fas fa-key"></i> Alterar Senha
                            </h3>
                            <form asp-controller="Conta" asp-action="AlterarSenha" method="post">
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <label for="senha-atual">Senha Atual</label>
                                    <input type="password" class="form-control" id="senha-atual" name="SenhaAtual" required>
                                </div>
                                <div class="form-group">
                                    <label for="nova-senha">Nova Senha</label>
                                    <input type="password" class="form-control" id="nova-senha" name="NovaSenha" required>
                                </div>
                                <div class="form-group">
                                    <label for="confirmar-senha">Confirmar Nova Senha</label>
                                    <input type="password" class="form-control" id="confirmar-senha" name="ConfirmarSenha" required>
                                </div>
                                <button type="submit" class="btn btn-primary" style="background-color: #8B0000 !important; border: solid white;">
                                    <i class="fas fa-sync-alt"></i> Alterar Senha
                                </button>
                            </form>
                        </div>

                        <div class="settings-card">
                            <h3 class="card-title">
                                <i class="fas fa-trash-alt"></i> Excluir Conta
                            </h3>
                            <p>
                                A exclusão da conta é permanente e irá remover todos os seus dados e histórico de
                                denúncias.
                            </p>
                            <form asp-controller="Conta" asp-action="ExcluirConta" method="post"
                                  onsubmit="return confirm('ATENÇÃO: Tem certeza que deseja excluir sua conta permanentemente? Esta ação é irreversível.');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-exclamation-triangle"></i> Excluir Minha Conta
                                </button>
                            </form>
                        </div>
                    </div>

                    <div id="ajuda" class="settings-section" style="display: none;">
                        <h2 class="section-title">
                            <i class="fas fa-question-circle"></i> Ajuda e Suporte
                        </h2>

                        <div class="settings-card">
                            <h3 class="card-title">
                                <i class="fas fa-headset"></i> Suporte
                            </h3>
                            <p>Entre em contato conosco ou consulte nossa seção de Dúvidas Frequentes.</p>
                            <a href="mailto:suporte@farolseguro.com.br" class="btn btn-primary" style="background-color: #8B0000 !important; border: solid white;">
                                <i class="fas fa-envelope"></i> Entrar em Contato
                            </a>
                        </div>

                        <div class="settings-card">
                            <h3 class="card-title">
                                <i class="fas fa-info-circle"></i> Sobre o Sistema
                            </h3>
                            <p>Farol Seguro v1.0. Seu perfil: **@RoleUsuario**.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* Incluindo os scripts no final do body *@
    <script src="~/js/tela-config.js"></script>
    <script src="~/js/menu_dropdown.js"></script>
    <script src="~/js/open-modal.js"></script>
</body>

</html>