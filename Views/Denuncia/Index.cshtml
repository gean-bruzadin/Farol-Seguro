    <h2>Gerenciamento de Denúncias</h2>
    <a asp-action="Criar" class="btn btn-success">+ Nova Denúncia</a>
</div> *@

@* =======================================================
    2. FORMULÁRIO DE FILTRO
======================================================== *@
<div class="card p-3 mb-4 shadow-sm">
    <h5 class="card-title">🔍 Filtros de Busca</h5>
    <form asp-action="Index" method="get">
        <div class="row g-3 align-items-end">

            <div class="col-md-3 col-sm-6">
                <label for="idBusca" class="form-label small text-muted">Número da Denúncia (ID)</label>
                <input type="number" name="idBusca" id="idBusca" class="form-control"
                       value="@ViewBag.CurrentIdBusca" placeholder="Ex: 123" />
            </div>

            <div class="col-md-3 col-sm-6">
                <label for="status" class="form-label small text-muted">Status</label>
                <select name="status" id="status" class="form-select">
                    <option value="">-- Todos os Status --</option>
                    @foreach (var s in statusList)
                    {
                        <option value="@s" selected="@(ViewBag.CurrentStatus == s)">@s</option>
                    }
                </select>
            </div>

            <div class="col-md-3 col-sm-6">
                <label for="categoria" class="form-label small text-muted">Categoria</label>
                <select name="categoria" id="categoria" class="form-select">
                    <option value="">-- Todas as Categorias --</option>
                    @foreach (var c in categoriaFixaList)
                    {
                        <option value="@c" selected="@(ViewBag.CurrentCategoria == c)">@c</option>
                    }
                </select>
            </div>

            <div class="col-md-3 col-sm-6 d-flex gap-2">
                <button type="submit" class="btn btn-primary w-50" style="background-color: #8B0000! important; border: solid #8B0000; border-radius: 10px">Filtrar</button>
                <a asp-action="Index" class="btn btn-secondary w-50" style="border-radius: 10px">Limpar</a>
            </div>
        </div>
    </form>
</div>

@* =======================================================
    3. LISTA DE DENÚNCIAS
======================================================== *@
<div class="complaints-list">
    @if (Model == null || !Model.Any())
    {
        <div class="text-center p-4 alert alert-info">
            Nenhuma denúncia encontrada com os critérios de busca.
        </div>
    }
    else
    {
        foreach (var item in Model)
        {
            <div class="complaint-item" data-id="@item.Id_Denuncia">
                <div class="complaint-info">
                    <div class="complaint-id">Denúncia #@item.Id_Denuncia</div>
                    <div class="complaint-date">@item.DataCriacao_Denuncia.ToString("dd/MM/yyyy")</div>
                    <div class="complaint-summary">@item.Titulo_Denuncia</div>
                    <div class="complaint-category">@item.Categoria_Denuncia</div>
                </div>

                <div class="status-badge @GetStatusClass(item.Status_Denuncia)">
                    @item.Status_Denuncia
                </div>
            </div>

            <div class="complaint-detail" id="detail-@item.Id_Denuncia" style="display:none;">
                <div class="detail-content">
                    <h4>Denúncia #@item.Id_Denuncia</h4>
                    <p><strong>Titulo:</strong>@(item.Titulo_Denuncia ?? "-")</p>
                    <p><strong>Descrição:</strong> @item.Descricao_Denuncia</p>
                    <p><strong>Categoria:</strong> @item.Categoria_Denuncia</p>
                    <p><strong>Status:</strong> @item.Status_Denuncia</p>
                    <p><strong>Data:</strong> @item.DataCriacao_Denuncia.ToString("dd/MM/yyyy HH:mm")</p>
                    <p><strong>Aluno:</strong> @(item.DenunciaAnonima ? "Anônima" : item.Aluno?.Nome_Aluno ?? "Não informado")</p>
                    <p><strong>Escola:</strong> @item.Escola?.Nome_Escola</p>


                    <hr />

                    <h6>Anexos</h6>
                    @if (item.Anexos != null && item.Anexos.Any())
                    {
                        <ul>
                            @foreach (var a in item.Anexos)
                            {
                                <li><a href="@a.Caminho_Anexo" target="_blank">@a.Tipo_Anexo</a></li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>Sem anexos.</p>
                    }

                    <h6 class="mt-3">Testemunhas</h6>
                    @if (item.DenunciaTestemunhas != null && item.DenunciaTestemunhas.Any())
                    {
                        <ul>
                            @foreach (var dt in item.DenunciaTestemunhas)
                            {
                                <li>
                                    @dt.Testemunha?.Nome_Testemunha
                                    @if (!string.IsNullOrWhiteSpace(dt.Testemunha?.Telefone_Testemunha))
                                    {
                                        <span>- @dt.Testemunha.Telefone_Testemunha</span>
                                    }
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>Sem testemunhas.</p>
                    }

                    <h6 class="mt-3">Respostas</h6>
                    @if (item.Respostas != null && item.Respostas.Any())
                    {
                        <ul>
                            @foreach (var r in item.Respostas)
                            {
                                <li>@r.Descricao_Resposta</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>Sem respostas.</p>
                    }

                   
                        @* Botão para abrir modal de resposta — apenas visível para Funcionario/Admin *@
                        @if (User.IsInRole("Funcionario") || User.IsInRole("Admin"))
                        {
                            <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#responderModal_@item.Id_Denuncia">Responder</button>

                            <div class="modal fade" id="responderModal_@item.Id_Denuncia" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <form asp-action="Responder" method="post">
                                            @Html.AntiForgeryToken()
                                            <div class="modal-header">
                                                <h5 class="modal-title">Responder denúncia #@item.Id_Denuncia</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <input type="hidden" name="Id_Denuncia" value="@item.Id_Denuncia" />
                                                <div class="mb-2">
                                                    <label>Resposta</label>
                                                    <textarea name="Descricao_Resposta" class="form-control" rows="4" required></textarea>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="submit" class="btn btn-success">Enviar</button>
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            @* Botão para abrir modal de alteração de status *@
                            <button type="button" class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#statusModal_@item.Id_Denuncia">Alterar Status</button>

                            <div class="modal fade" id="statusModal_@item.Id_Denuncia" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <form asp-action="AlterarStatus" method="post">
                                            @Html.AntiForgeryToken()
                                            <div class="modal-header">
                                                <h5 class="modal-title">Alterar status - #@item.Id_Denuncia</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <input type="hidden" name="id" value="@item.Id_Denuncia" />
                                                <div class="mb-2">
                                                    <label>Escolha o novo status</label>
                                                    <select name="novoStatus" class="form-select" required>
                                                        <option value="">-- Selecionar --</option>
                                                        <option value="Aberta" selected="@(item.Status_Denuncia == "Aberta")">Aberta</option>
                                                        <option value="Pendente" selected="@(item.Status_Denuncia == "Pendente")">Pendente</option>
                                                        <option value="Em Aberto" selected="@(item.Status_Denuncia == "Em Aberto")">Em Aberto</option>
                                                        <option value="Respondida" selected="@(item.Status_Denuncia == "Respondida")">Respondida</option>
                                                        <option value="Resolvida" selected="@(item.Status_Denuncia == "Resolvida")">Resolvida</option>
                                                        <option value="Encerrada" selected="@(item.Status_Denuncia == "Encerrada")">Encerrada</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="submit" class="btn btn-primary">Salvar</button>
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="mt-2 text-end">
                        <button type="button" class="btn btn-secondary btn-sm close-detail">
                            <i class="fas fa-arrow-left"></i> Fechar
                        </button>
                    </div>
                </div>
           

        }
    }
</div>

@* =======================================================
    4. SCRIPTS (MANTIDOS)
======================================================== *@
<script>
    document.querySelectorAll(".complaint-item").forEach(item => {
        item.addEventListener("click", () => {
            const id = item.getAttribute("data-id");
            const detail = document.getElementById(`detail-${id}`);

            document.querySelectorAll(".complaint-detail").forEach(d => {
                if (d !== detail) d.style.display = "none";
            });

            detail.style.display = detail.style.display === "none" ? "block" : "none";
        });
    });

    document.querySelectorAll(".close-detail").forEach(btn => {
        btn.addEventListener("click", e => {
            e.stopPropagation();
            btn.closest(".complaint-detail").style.display = "none";
        });
    });
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

@*Necessário para status*@
@functions {
    public string GetStatusClass(string status)
    {
        return status?.ToLower() switch
        {
            "aberta" => "status-reported",
            "pendente" => "status-investigating",
            "em aberto" => "status-investigating",
            "respondida" => "status-investigating",
            "resolvida" => "status-resolved",
            "encerrada" => "status-closed",
            _ => "status-reported"
        };
    }
}