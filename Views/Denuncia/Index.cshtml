@model IEnumerable<Farol_Seguro.Models.Denuncia>

@{
    ViewData["Title"] = "Gerenciamento de Denúncias";
    // Define a lista de status disponíveis para o dropdown de FILTRO
    // Inclui o status 'Rejeitada - Denúncia Falsa'
    var statusList = new List<string> { "Aberta", "Respondida", "Investigação", "Resolvida", "Encerrada", "Rejeitada - Denúncia Falsa" };
    var categoriaFixaList = new List<string> { "Verbal", "Social", "Físico", "Cyber", "Outro" };
}

@* =======================================================
    1. MENSAGENS DE ALERTA (AGORA COM @Html.Raw PARA FORMATAR MENSAGENS DO CONTROLLER)
======================================================== *@
@{
    if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{-- Usa Html.Raw --}}
            <strong>Sucesso!</strong> @Html.Raw(TempData["MensagemSucesso"])
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    else if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{-- Usa Html.Raw --}}
            <strong>Erro!</strong> @Html.Raw(TempData["MensagemErro"])
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}

<link href="~/css/header.css" rel="stylesheet" />
<link href="~/css/lista.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" />


<div class="d-flex justify-content-between align-items-center mb-4 mt-3">
    <h2>Gerenciamento de Denúncias</h2>
    @if (User.IsInRole("Aluno"))
    {
        // NOTA: O Aluno é bloqueado na Action Criar do Controller se estiver penalizado.
        <a asp-action="Criar" class="btn btn-success">+ Nova Denúncia</a>
    }
</div>

@* =======================================================
    2. FORMULÁRIO DE FILTRO
======================================================== *@
<div class="card p-3 mb-4 shadow-sm">
    <h5 class="card-title">🔍 Filtros de Busca</h5>
    <form asp-action="Index" method="get">
        <div class="row g-3 align-items-end">

            <div class="col-md-3 col-sm-6">
                <label for="idBusca" class="form-label small text-muted">Número da Denúncia (ID)</label>
                <input type="number" name="idBusca" id="idBusca" class="form-control"
                                   value="@ViewBag.CurrentIdBusca" placeholder="Ex: 123" />
            </div>

            <div class="col-md-3 col-sm-6">
                <label for="status" class="form-label small text-muted">Status</label>
                <select name="status" id="status" class="form-select">
                    <option value="">-- Todos os Status --</option>
                    @foreach (var s in statusList)
                    {
                        <option value="@s" selected="@(ViewBag.CurrentStatus == s)">@s</option>
                    }
                </select>
            </div>

            <div class="col-md-3 col-sm-6">
                <label for="categoria" class="form-label small text-muted">Categoria</label>
                <select name="categoria" id="categoria" class="form-select">
                    <option value="">-- Todas as Categorias --</option>
                    @foreach (var c in categoriaFixaList)
                    {
                        <option value="@c" selected="@(ViewBag.CurrentCategoria == c)">@c</option>
                    }
                </select>
            </div>

            <div class="col-md-3 col-sm-6 d-flex gap-2">
                <button type="submit" class="btn btn-primary w-50" style="background-color: #8B0000! important; border: solid #8B0000; border-radius: 10px">Filtrar</button>
                <a asp-action="Index" class="btn btn-secondary w-50" style="border-radius: 10px">Limpar</a>
            </div>
        </div>
    </form>
</div>

@* =======================================================
    3. LISTA DE DENÚNCIAS (Layout Antigo Revertido)
======================================================== *@
<div class="complaints-list">
    @if (Model == null || !Model.Any())
    {
        <div class="text-center p-4 alert alert-info">
            Nenhuma denúncia encontrada com os critérios de busca.
        </div>
    }
    else
    {
        foreach (var item in Model)
        {
            @* item.Id_Denuncia removido do data-id para evitar o uso de JS expansível *@
            <div class="complaint-item @(item.IsFalsa ? "is-falsa" : "")">
                <div class="complaint-info">
                    <div class="complaint-id">Denúncia #@item.Id_Denuncia</div>
                    <div class="complaint-date">@item.DataCriacao_Denuncia.ToString("dd/MM/yyyy")</div>
                    <div class="complaint-summary">**@item.Titulo_Denuncia** - (@item.Categoria_Denuncia)</div>

                    @* Informações de Status e Autor visíveis na lista *@
                    <div class="d-flex align-items-center mt-2">
                        <div class="status-badge @GetStatusClass(item.Status_Denuncia)">
                            @item.Status_Denuncia
                            @if (item.IsFalsa)
                            {
                                <i class="fas fa-gavel text-danger ms-1" title="Denúncia marcada como Falsa"></i>
                            }
                        </div>

                        <div class="ms-3 small text-muted">
                            Por: @(item.DenunciaAnonima ? "ANÔNIMA" : item.Aluno?.Nome_Aluno ?? "Não informado")
                            @if (item.Aluno != null && item.Aluno.IsBloqueado)
                            {
                                <span class="badge bg-danger ms-2"><i class="fas fa-lock"></i> BLOQUEADO</span>
                            }
                        </div>


                    </div>
                </div>

                @* =======================================================
                    BLOCO DE AÇÕES (Administrativas e Aluno)
                ======================================================== *@
                <div class="d-flex flex-wrap gap-2 mt-2 pt-2 border-top">

                    @* AÇÕES DISPONÍVEIS PARA ADMIN/FUNCIONÁRIO *@
                    @if (User.IsInRole("Funcionario") || User.IsInRole("Admin"))
                    {
                        @* --- BOTÃO MARCAR COMO FALSA (AGORA CORRETO COM POST) --- *@
                        @if (!item.IsFalsa)
                        {
                            <form asp-action="MarcarComoFalsa" method="post" style="display:inline;" onsubmit="return confirm('CONFIRMAR: Marcar denúncia #@item.Id_Denuncia como FALSA? Se for identificada, o aluno será penalizado.');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="idDenuncia" value="@item.Id_Denuncia" />
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="fas fa-gavel"></i> Marcar como Falsa
                                </button>
                            </form>
                        }
                        else
                        {
                            <button class="btn btn-danger btn-sm" disabled><i class="fas fa-check-double"></i> Já Falsa</button>
                        }

                        @* --- Botão Responder (Modal) --- *@
                        <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#responderModal_@item.Id_Denuncia">
                            <i class="fas fa-reply"></i> Responder
                        </button>

                        @* --- Botão Alterar Status (Modal) --- *@
                        <button type="button" class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#statusModal_@item.Id_Denuncia">
                            <i class="fas fa-arrows-rotate"></i> Status
                        </button>
                    }

                    @* AÇÃO DE EDIÇÃO (Bloqueada se for falsa, e agora bloqueada para Admin/Funcionario) *@
                    @if (!User.IsInRole("Funcionario") && !User.IsInRole("Admin")) // Adicionada restrição para não mostrar Editar para Gestores
                    {
                        @if (!item.IsFalsa) // Restrição original (bloqueada se for falsa)
                        {
                            <a asp-action="Editar" asp-route-id="@item.Id_Denuncia" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                        }
                        else if (item.Id_Aluno.HasValue) // Mostra botão desabilitado se for aluno e a denúncia for identificada e falsa
                        {
                            <button class="btn btn-outline-secondary btn-sm" disabled title="Não é possível editar denúncias marcadas como Falsas.">
                                <i class="fas fa-edit"></i> Editar (Bloqueado)
                            </button>
                        }
                    }

                    <a asp-action="Detalhes" asp-route-id="@item.Id_Denuncia" class="btn btn-info btn-sm text-white">
                        <i class="fas fa-search"></i> Detalhes
                    </a>

                </div>
                @* =======================================================
                    FIM DO BLOCO DE AÇÕES
                ======================================================== *@
            </div>
        }
    }
</div>

@* =======================================================
    4. MODAIS (RESPONDER E STATUS) - Mantidos para Admin/Funcionário
======================================================== *@
@if (User.IsInRole("Funcionario") || User.IsInRole("Admin"))
{
    foreach (var item in Model)
    {
        @* --- Modal Responder --- *@
        <div class="modal fade" id="responderModal_@item.Id_Denuncia" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form asp-action="Responder" method="post">
                        @Html.AntiForgeryToken()
                        <div class="modal-header">
                            <h5 class="modal-title">Responder denúncia #@item.Id_Denuncia</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" name="Id_Denuncia" value="@item.Id_Denuncia" />
                            <div class="mb-2">
                                <label>Resposta</label>
                                <textarea name="Descricao_Resposta" class="form-control" rows="4" required></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-success">Enviar</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        @* --- Modal Alterar Status --- *@
        <div class="modal fade" id="statusModal_@item.Id_Denuncia" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form asp-action="AlterarStatus" method="post">
                        @Html.AntiForgeryToken()
                        <div class="modal-header">
                            <h5 class="modal-title">Alterar status - #@item.Id_Denuncia</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" name="id" value="@item.Id_Denuncia" />
                            <div class="mb-2">
                                <label>Escolha o novo status</label>
                                <select name="novoStatus" class="form-select" required>
                                    <option value="">-- Selecionar --</option>
                                    @foreach (var s in statusList)
                                    {
                                        <option value="@s" selected="@(item.Status_Denuncia == s)">@s</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Salvar</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
}


@* =======================================================
    5. SCRIPTS e FUNCTIONS
======================================================== *@
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

@functions {
    public string GetStatusClass(string status)
    {
        return status?.ToLower() switch
        {
            "aberta" => "status-reported",
            "investigacao" => "status-investigating",
            "respondida" => "status-investigating",
            "resolvida" => "status-resolved",
            "encerrada" => "status-closed",
            "rejeitada - denúncia falsa" => "status-reported", // <--- Esta é a classe
            _ => "status-reported"
        };
    }
}