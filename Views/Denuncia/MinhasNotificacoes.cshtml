@model IEnumerable<Farol_Seguro.Models.Notificacao>

@{
    ViewData["Title"] = "Minhas Notificações";
}
<hr />

<link href="~/css/header.css" rel="stylesheet" />

@if (!Model.Any())
{
    <div class="alert alert-info" role="alert">
        <i class="fas fa-info-circle"></i> Não há notificações para exibir.
    </div>
}
else
{
    <div class="d-flex justify-content-end mb-3">
        <a asp-controller="Denuncia" asp-action="LimparTodas" class="btn btn-outline-danger btn-sm"
           onclick="return confirm('Tem certeza que deseja limpar TODAS as suas notificações? Esta ação não pode ser desfeita.');">
            <i class="fas fa-trash-alt"></i> Limpar Todas
        </a>
    </div>
    <div class="list-group">
        @foreach (var item in Model)
        {
            // Define classes de estilo
            string itemClass = item.Lida ? "list-group-item-light" : "list-group-item-primary";
            string badgeClass = item.Lida ? "text-secondary" : "bg-primary text-white";

            <div class="d-flex align-items-stretch mb-2 border rounded-3 @itemClass">

                @* O link de acesso à Denúncia ocupa a maior parte do espaço e mantém a função de marcar como lida (se você a implementou) *@
                <a asp-controller="Denuncia" asp-action="Detalhes" asp-route-id="@item.Id_Denuncia" class="list-group-item-action flex-grow-1 p-3">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">
                            @Html.DisplayFor(modelItem => item.Mensagem)
                        </h5>
                        <span class="badge @badgeClass p-2 flex-shrink-0">
                            @if (!item.Lida)
                            {
                            <i class="fas fa-exclamation-circle" style="display: flex; gap: 5px;">Nova</i>
                        }
                        else
                        {
                            <i class="fas fa-check" style="display: flex; gap: 5px;">Lida</i>
                            }
                        </span>
                    </div>
                    <p class="mb-1">
                        Denúncia #@(item.Id_Denuncia): Status Atual: <strong>@(item.Denuncia?.Status_Denuncia ?? "N/A")</strong>
                    </p>
                    <small class="text-muted">Recebida em: @item.DataCriacao.ToString("dd/MM/yyyy HH:mm")</small>
                </a>

                <div class="d-flex align-items-center me-2">
                    <a asp-controller="Denuncia" asp-action="Remover" asp-route-idNotificacao="@item.Id_Notificacao"
                       class="btn btn-outline-danger btn-sm"
                       onclick="return confirm('Tem certeza que deseja remover esta notificação?');"
                       title="Remover Notificação">
                        <i class="fas fa-times"></i>
                    </a>
                </div>
            </div>
        }
    </div>
}
<div class="mt-4">
    <a asp-action="MinhasDenuncias" class="btn btn-secondary">Voltar para Minhas Denúncias</a>
</div>