@model Farol_Seguro.Models.Escola

@{
    ViewData["Title"] = "Cadastrar Nova Escola";
}

<link href="~/css/header.css" rel="stylesheet" />
<link href="~/css/Form.css" rel="stylesheet" />

<div class="form-container">
    <div class="form-section">
        <h1 class="form-title">Cadastrar Nova Escola</h1>

        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Sucesso!</strong> @TempData["MensagemSucesso"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Erro!</strong> @TempData["MensagemErro"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="Criar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nome_Escola" class="control-label">Nome da Escola</label>
                <input asp-for="Nome_Escola" class="form-control" />
                <span asp-validation-for="Nome_Escola" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-col">
                    <div class="form-group">
                        <label asp-for="Cnpj_Escola" class="control-label">CNPJ</label>
                        <input asp-for="Cnpj_Escola" class="form-control" />
                        <span asp-validation-for="Cnpj_Escola" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-col">
                    <div class="form-group">
                        <label asp-for="Telefone_Escola" class="control-label">Telefone</label>
                        <input asp-for="Telefone_Escola" class="form-control" />
                        <span asp-validation-for="Telefone_Escola" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Endereco_Escola" class="control-label">Endereço da Escola</label>
                <input asp-for="Endereco_Escola" class="form-control" />
                <span asp-validation-for="Endereco_Escola" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-col">
                    <div class="form-group">
                        <label asp-for="Id_Cidade" class="control-label">Cidade</label>
                        <select asp-for="Id_Cidade" class="form-control" asp-items="ViewBag.Id_Cidade">
                            <option value="">-- Selecione a Cidade --</option>
                        </select>
                        <span asp-validation-for="Id_Cidade" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-col">
                    <div class="form-group">
                        <label asp-for="Id_Funcionario" class="control-label">Diretor(a) / Responsável</label>
                        <select asp-for="Id_Funcionario" class="form-control" asp-items="ViewBag.Id_Funcionario">
                            <option value="">-- Selecione o Responsável --</option>
                        </select>
                        <span asp-validation-for="Id_Funcionario" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="btn-group btn-group-center">
                <button type="submit" class="btn btn-primary">Cadastrar Escola</button>
                <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
            </div>
        </form>
    </div>
</div>

<script src="~/js/menu_dropdown.js"></script>
<script src="~/js/open-modal.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}