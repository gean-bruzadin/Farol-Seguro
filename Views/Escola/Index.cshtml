@model IEnumerable<Farol_Seguro.Models.Escola>

@{
    ViewData["Title"] = "Lista de Escolas";
}
<link href="~/css/header.css" rel="stylesheet" />
<link href="~/css/Index.css" rel="stylesheet" />

<div class="index-container">
    @* Bloco de Mensagens TempData *@
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success alert-custom alert-dismissible fade show" role="alert">
            <strong><i class="fas fa-check-circle me-2"></i>Sucesso!</strong> @TempData["MensagemSucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger alert-custom alert-dismissible fade show" role="alert">
            <strong><i class="fas fa-exclamation-circle me-2"></i>Erro!</strong> @TempData["MensagemErro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Barra de Ações -->
    <div class="action-bar">
        <a asp-action="Criar" class="btn-new">
            <i class="fas fa-plus"></i>
            Nova Escola
        </a>
    </div>

    <!-- Tabela -->
    <div class="table-container">
        <table class="custom-table">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>CNPJ</th>
                    <th>Cidade</th>
                    <th>Funcionário</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td data-label="Nome">@item.Nome_Escola</td>
                        <td data-label="CNPJ">@item.Cnpj_Escola</td>
                        <td data-label="Cidade">@item.Cidade?.Nome_Cidade</td>
                        <td data-label="Funcionário">@item.Funcionario?.Nome_Funcionario</td>
                        <td data-label="Ações">
                            <div class="action-buttons">
                                <a asp-action="Details" asp-route-id="@item.Id_Escola" class="btn-action btn-details">
                                    <i class="fas fa-eye"></i>Detalhes
                                </a>
                                <a asp-action="Editar" asp-route-id="@item.Id_Escola" class="btn-action btn-edit">
                                    <i class="fas fa-edit"></i>Editar
                                </a>
                                <button type="button" class="btn-action btn-delete" 
                                        data-bs-toggle="modal" 
                                        data-bs-target="#deleteModal-@item.Id_Escola">
                                    <i class="fas fa-trash"></i>Excluir
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="empty-state">
            <i class="fas fa-school"></i>
            <h3>Nenhuma escola cadastrada</h3>
            <p>Comece adicionando a primeira escola ao sistema.</p>
            <a asp-action="Criar" class="btn-new mt-3">
                <i class="fas fa-plus"></i>
                Adicionar Primeira Escola
            </a>
        </div>
    }
</div>

@* =======================================================
    MODAIS DE EXCLUSÃO (Para cada escola)
======================================================== *@
@foreach (var item in Model)
{
    <div class="modal fade" id="deleteModal-@item.Id_Escola" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Confirmar exclusão</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Tem certeza que deseja excluir <strong>@item.Nome_Escola</strong>?
                </div>
                <div class="modal-footer">
                    <form asp-action="Deletar" asp-route-id="@item.Id_Escola" method="post">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-danger">Excluir</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

<script src="~/js/menu_dropdown.js"></script>
<script src="~/js/open-modal.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>