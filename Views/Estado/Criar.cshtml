@model Farol_Seguro.Models.Estado

@{
    ViewData["Title"] = "Criar Estado";
}

<link href="~/css/header.css" rel="stylesheet" />
<link href="~/css/Form.css" rel="stylesheet" />

<div class="form-container">
    <div class="form-section">
        <h1 class="form-title">Cadastrar Novo Estado</h1>

        <form asp-action="Criar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nome_Estado" class="control-label">Nome do Estado</label>
                <input asp-for="Nome_Estado" class="form-control" />
                <span asp-validation-for="Nome_Estado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Sigla_Estado" class="control-label">Sigla</label>
                <input asp-for="Sigla_Estado" class="form-control" />
                <span asp-validation-for="Sigla_Estado" class="text-danger"></span>
                <div class="form-help">Exemplo: SP, RJ, MG</div>
            </div>

            <div class="btn-group btn-group-center">
                <button type="submit" class="btn btn-primary">Cadastrar Estado</button>
                <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>