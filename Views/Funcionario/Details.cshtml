@model Farol_Seguro.Models.Funcionario

@{
    ViewData["Title"] = "Detalhes do Funcionário";
}
<link href="~/css/header.css" rel="stylesheet" />
<link href="~/css/Details.css" rel="stylesheet" />

<div class="details-container">
    @* Bloco de Mensagens TempData *@
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success alert-custom alert-dismissible fade show" role="alert">
            <strong><i class="fas fa-check-circle me-2"></i>Sucesso!</strong> @TempData["MensagemSucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger alert-custom alert-dismissible fade show" role="alert">
            <strong><i class="fas fa-exclamation-circle me-2"></i>Erro!</strong> @TempData["MensagemErro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Card de Detalhes -->
    <div class="details-card">
        <div class="details-card-header">
            <h2 class="details-card-title">
                <i class="fas fa-user-tie"></i>
                Detalhes do Funcionário
            </h2>
        </div>
        <div class="details-card-body">
            <ul class="details-list">
                <li class="detail-item">
                    <div class="detail-icon">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="detail-content">
                        <div class="detail-label">Nome</div>
                        <div class="detail-value">@Model.Nome_Funcionario</div>
                    </div>
                </li>
                <li class="detail-item">
                    <div class="detail-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="detail-content">
                        <div class="detail-label">Email</div>
                        <div class="detail-value">@Model.Email_Funcionario</div>
                    </div>
                </li>
                <li class="detail-item">
                    <div class="detail-icon">
                        <i class="fas fa-briefcase"></i>
                    </div>
                    <div class="detail-content">
                        <div class="detail-label">Cargo</div>
                        <div class="detail-value">@Model.Cargo?.Nome_Cargo</div>
                    </div>
                </li>
                <li class="detail-item">
                    <div class="detail-icon">
                        <i class="fas fa-building"></i>
                    </div>
                    <div class="detail-content">
                        <div class="detail-label">Departamento</div>
                        <div class="detail-value">@Model.Departamento_Funcionario</div>
                    </div>
                </li>
                <li class="detail-item">
                    <div class="detail-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <div class="detail-content">
                        <div class="detail-label">Nível de Acesso</div>
                        <div class="detail-value">@Model.Nivel?.Nome_Nivel</div>
                    </div>
                </li>
            </ul>

            <!-- Botões de Ação -->
            <div class="details-actions">
                <a asp-action="Editar" asp-route-id="@Model.Id_Funcionario" class="btn-details btn-edit">
                    <i class="fas fa-edit"></i>
                    Editar Funcionário
                </a>
                <a asp-action="Index" class="btn-details btn-back">
                    <i class="fas fa-arrow-left"></i>
                    Voltar para Lista
                </a>
            </div>
        </div>
    </div>
</div>

<script src="~/js/menu_dropdown.js"></script>
<script src="~/js/open-modal.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>