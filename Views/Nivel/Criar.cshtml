@model Farol_Seguro.Models.Nivel

@{
    ViewData["Title"] = "Criar Níveis";
}

<link href="~/css/header.css" rel="stylesheet" />
<link href="~/css/Form.css" rel="stylesheet" />

<div class="form-container">
    <div class="form-section">
        <h1 class="form-title">Cadastrar Novo Nível</h1>

        <form asp-action="Criar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Nome_Nivel" class="control-label">Nome do Nível</label>
                <input asp-for="Nome_Nivel" class="form-control" placeholder="Ex: Admin, Funcionário, Aluno" />
                <span asp-validation-for="Nome_Nivel" class="text-danger"></span>
                <div class="form-help">Exemplos: Admin, Funcionário, Aluno</div>
            </div>

            <div class="btn-group btn-group-center">
                <button type="submit" class="btn btn-primary">Cadastrar Nível</button>
                <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
            </div>
        </form>
    </div>
</div>

<script src="~/js/menu_dropdown.js"></script>
<script src="~/js/open-modal.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}