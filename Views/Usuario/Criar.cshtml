@model Farol_Seguro.Models.Usuario

@{
    ViewData["Title"] = "Criar Novo Admin";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Farol Seguro</title>

    @* LINK DO BOOTSTRAP CSS (Necessário para alerts) *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    @* LINK DO BOXICONS para ícones *@
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />

    @* LINK PARA O ARQUIVO CSS EXTERNO (ASSUMINDO QUE ESTÁ EM wwwroot/css/AdminCreate.css) *@
    <link rel="stylesheet" href="~/css/Admin.css" />
</head>
<body>
    <div class="form-container">
        <h1>@ViewData["Title"]</h1>

        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Sucesso!</strong> @TempData["MensagemSucesso"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Erro!</strong> @TempData["MensagemErro"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <h4>Usuário</h4>
        <hr />

        <div>
            <form asp-action="Criar">
                <div asp-validation-summary="ModelOnly" class="text-danger" style="text-align: left;"></div>

                @* Campo Nome *@
                <div class="form-group mb-3">
                    @* O rótulo é ocultado pelo CSS, usamos o placeholder no input *@
                    <div class="input-field">
                        <i class="bx bxs-user icon"></i>
                        <input asp-for="Nome_Usuario" class="form-control" placeholder="Nome do Administrador" />
                    </div>
                    <span asp-validation-for="Nome_Usuario" class="text-danger"></span>
                </div>

                @* Campo Email *@
                <div class="form-group mb-3">
                    <div class="input-field">
                        <i class="bx bxs-envelope icon"></i>
                        <input asp-for="Email_Usuario" class="form-control" placeholder="E-mail" />
                    </div>
                    <span asp-validation-for="Email_Usuario" class="text-danger"></span>
                </div>

                @* Campo Senha *@
                <div class="form-group mb-3">
                    <div class="input-field">
                        <i class="bx bxs-lock-alt icon"></i>
                        <input asp-for="Senha_Usuario" type="password" class="form-control" placeholder="Senha" />
                    </div>
                    <span asp-validation-for="Senha_Usuario" class="text-danger"></span>
                </div>

                @* Botões *@
                <div class="form-group d-flex justify-content-between mt-4">
                    <input type="submit" value="Criar" class="btn btn-primary" />
                    
                </div>
            </form>
        </div>
    </div>

    @* Scripts *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    @* Scripts de Validação *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/js/menu_dropdown.js"></script>
    <script src="~/js/open-modal.js"></script>
</body>
</html>