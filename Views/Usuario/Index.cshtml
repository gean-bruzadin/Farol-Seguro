@model IEnumerable<Farol_Seguro.Models.Usuario>

@{
    ViewData["Title"] = "Usuários (Admins)";
}
<link href="~/css/header.css" rel="stylesheet" />
<link href="~/css/Index.css" rel="stylesheet" />

<div class="index-container">
    @* Bloco de Mensagens TempData *@
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success alert-custom alert-dismissible fade show" role="alert">
            <strong><i class="fas fa-check-circle me-2"></i>Sucesso!</strong> @TempData["MensagemSucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger alert-custom alert-dismissible fade show" role="alert">
            <strong><i class="fas fa-exclamation-circle me-2"></i>Erro!</strong> @TempData["MensagemErro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Barra de Ações -->
    <div class="action-bar">
        <a asp-action="Criar" class="btn-new">
            <i class="fas fa-plus"></i>
            Novo Usuário
        </a>
    </div>

    <!-- Tabela -->
    <div class="table-container">
        <table class="custom-table">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Nível</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td data-label="Nome">@item.Nome_Usuario</td>
                        <td data-label="Email">@item.Email_Usuario</td>
                        <td data-label="Nível">@item.Nivel?.Nome_Nivel</td>
                        <td data-label="Ações">
                            <div class="action-buttons">
                                <a asp-action="Editar" asp-route-id="@item.Id_Usuario" class="btn-action btn-edit">
                                    <i class="fas fa-edit"></i>Editar
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id_Usuario" class="btn-action btn-details">
                                    <i class="fas fa-eye"></i>Detalhes
                                </a>
                                <button type="button" class="btn-action btn-delete" 
                                        data-bs-toggle="modal" 
                                        data-bs-target="#deleteModal-@item.Id_Usuario">
                                    <i class="fas fa-trash"></i>Excluir
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="empty-state">
            <i class="fas fa-users-cog"></i>
            <h3>Nenhum usuário admin cadastrado</h3>
            <p>Comece adicionando o primeiro usuário administrador ao sistema.</p>
            <a asp-action="Criar" class="btn-new mt-3">
                <i class="fas fa-plus"></i>
                Adicionar Primeiro Admin
            </a>
        </div>
    }
</div>

@* =======================================================
    MODAIS DE EXCLUSÃO (Para cada usuário)
======================================================== *@
@foreach (var item in Model)
{
    <div class="modal fade" id="deleteModal-@item.Id_Usuario" tabindex="-1" aria-labelledby="deleteModalLabel-@item.Id_Usuario" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteModalLabel-@item.Id_Usuario">Confirmar Exclusão</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    <p>Tem certeza que deseja excluir o usuário <strong>@item.Nome_Usuario</strong>?</p>
                </div>
                <div class="modal-footer justify-content-center">
                    <form asp-action="Deletar" asp-route-id="@item.Id_Usuario" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Sim, excluir</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

<script src="~/js/menu_dropdown.js"></script>
<script src="~/js/open-modal.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>